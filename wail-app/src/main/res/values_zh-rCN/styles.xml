<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light.ActionBarDark" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#505050</item>
        <item name="android:titleTextStyle">@style/AppTheme.Dark.ActionBarLight.Title</item>
    </style>

    <style name="AppTheme.Dark.ActionBarLight.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fbfbfb</item>
    </style>

    <style name="AppTheme.DrawerItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/main_drawer_text_padding</item>
        <item name="android:paddingRight">@dimen/main_drawer_padding</item>
        <item name="android:textColor">@color/drawer_item_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="typefaceFromAssets">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="AppTheme.DrawerTitleMainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#85000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/main_drawer_padding</item>
        <item name="android:paddingRight">@dimen/main_drawer_padding</item>
        <item name="typefaceFromAssets">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="AppTheme.DrawerTitleSecondaryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#85000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/main_drawer_padding</item>
        <item name="android:paddingRight">@dimen/main_drawer_padding</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

</resources>