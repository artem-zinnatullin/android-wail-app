<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppTheme.Light.Clickable">
        <item name="android:background">@drawable/light_theme_clickable_drawable</item>
    </style>

    <style name="AppTheme.Light.ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:clickable">true</item>
        <item name="android:listSelector">@drawable/light_theme_clickable_drawable</item>
    </style>

    <!--Main screen-->

    <style name="AppTheme.Light.MainTracksTodayContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/light_theme_tracks_today_background</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="AppTheme.Light.MainTracksTodayCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">60sp</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.MainTracksTodayLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.MainTotalTrackCountUnknown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/light_theme_text_primary</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.MainTotalTrackCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/light_theme_text_primary</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.MainTotalTrackCountLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/light_theme_text_primary</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.MainUpdatedAtLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/light_theme_text_secondary</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Light.MainNowScrobblingTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_theme_text_primary</item>
        <item name="typefaceFromAssets">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.Light.Clickable.MainIgnorePlayerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="typefaceFromAssets">fonts/Roboto-Bold.ttf</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AppTheme.Light.MainWailIsSadContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="AppTheme.Light.Clickable.MainWailIsSadLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.Light.MainFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">25dp</item>
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent</item>
    </style>

    <!--/Main screen-->

    <!--Tracks-->

    <style name="AppTheme.Light.Clickable.TrackListItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="AppTheme.Light.BackgroundText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_theme_text_secondary</item>
    </style>

    <!--/Tracks-->

    <!--Settings screen-->

    <style name="AppTheme.Light.SettingsBackground">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_theme_settings_background</item>
    </style>

    <style name="AppTheme.Light.SettingsCardView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPaddingBottom">5dp</item>
        <item name="cardBackgroundColor">@color/light_theme_background</item>
    </style>

    <style name="AppTheme.Light.SettingsCategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_item_padding_top_and_bottom</item>
        <item name="android:paddingLeft">@dimen/settings_item_padding_left_and_right</item>
        <item name="android:paddingRight">@dimen/settings_item_padding_left_and_right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/light_theme_background</item>
    </style>

    <style name="AppTheme.Light.SettingsCategoryTitleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/settings_title_padding_right_and_left</item>
        <item name="android:paddingRight">@dimen/settings_padding_right_and_left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Light.SettingsCategoryTitleDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="AppTheme.Light.Clickable.SettingsItem">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/settings_padding_right_and_left</item>
        <item name="android:paddingRight">@dimen/settings_padding_right_and_left</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/settings_item_padding_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/settings_item_padding_top_and_bottom</item>
    </style>

    <style name="AppTheme.Light.SettingsItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_item_title</item>
        <item name="android:textColor">@color/light_theme_settings_item_title</item>
    </style>

    <style name="AppTheme.Light.SettingsItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_item_desc</item>
        <item name="android:textColor">@color/light_theme_settings_item_description</item>
    </style>

    <style name="AppTheme.Light.Clickable.SettingsItem.WithSwitch">
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Light.SettingsItemTitle.WithSwitch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Light.SettingsItemSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Light.SettingsSelectLanguageItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <!--/Settings screen-->

    <!--Dialog-->

    <style name="AppTheme.Light.DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/light_theme_background</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Light.DialogButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@color/light_theme_background</item>
    </style>

    <!--/Dialog-->

    <style name="AppTheme.Light.Clickable.SignInToLastFm">
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#35b5e6</item>
    </style>

</resources>